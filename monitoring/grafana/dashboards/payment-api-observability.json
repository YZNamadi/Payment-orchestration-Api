{
  "title": "Payment API Observability",
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "5s",
  "tags": ["payments", "prometheus"],
  "panels": [
    {
      "type": "graph",
      "title": "Request Rate by Route",
      "targets": [
        {
          "refId": "A",
          "expr": "sum by (route,method,status) (rate(api_requests_total[1m]))",
          "legendFormat": "{{route}} {{method}} {{status}}"
        }
      ],
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 0 }
    },
    {
      "type": "graph",
      "title": "Webhook Outcomes Rate",
      "targets": [
        {
          "refId": "A",
          "expr": "sum by (provider,outcome) (rate(webhook_events_total[1m]))",
          "legendFormat": "{{provider}} {{outcome}}"
        }
      ],
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 8 }
    },
    {
      "type": "graph",
      "title": "P95 Request Latency",
      "targets": [
        {
          "refId": "A",
          "expr": "histogram_quantile(0.95, sum by (le,route,method,status) (rate(api_request_duration_seconds_bucket[5m])))",
          "legendFormat": "{{route}} {{method}} {{status}}"
        }
      ],
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 16 }
    }
  ]
}